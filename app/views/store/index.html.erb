<% @product.each do |product|%>

	<h3><%= product.title%></h3>
	<table>
		(<%= product.category.name%>)	
		<tr>
			<td><%= product.description%></td>
		</tr>
		<tr>
			<td>>Price:- <%= product.price.eql?(nil) ? "Not Available" : product.price %></td>
		</tr>
		<tr>
			<td>>Quantity:- <%= product.quantity.eql?(nil) ? "Not Available" : product.quantity %></td>
		</tr>
	</table>
	<%= button_to "Add to Cart", line_items_path(product_id: product) if current_user%>
	<%#= button_to "Add to Cart", carts_path(product_id: @product)%>
<%end%>

